<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/favicon.ico">
    <title>Preclinic - Medical & Hospital - Bootstrap 4 Admin Template</title>
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
    <!--[if lt IE 9]>
		<script src="/assets/js/html5shiv.min.js"></script>
		<script src="/assets/js/respond.min.js"></script>
	<![endif]-->
</head>

<body>
    <style>
        .about-author-img-note {
            background-color: #fff;
            height: 70px;
            overflow: hidden;
            position: absolute;
            width: 70px;
        }
    </style>
    <div class="main-wrapper">
        <%- include('partials/header') %>
        <%- include('partials/sidemenu') %>
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-4 col-3">
                        <h4 class="page-title">Appointments</h4>
                    </div>
                    <div class="col-sm-8 col-9 text-right m-b-20">
                        <a href="/web/doctor/addAppointment" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add Appointment</a>
                    </div>
                </div>
				<div class="row">
					<div class="col-md-12">
						<div class="table-responsive">
							<table class="table table-striped custom-table">
								<thead>
									<tr>
										<th>Appointment ID</th>
										<th>Patient Name</th>
										<th>Birth date</th>
										<th>National ID</th>
										<th>CNSS</th>
										<th>Appointment Date</th>
										<th>Appointment Time</th>
										<th>Status</th>
										<th class="text-right">Action</th>
									</tr>
								</thead>
								<tbody>
                                    <% for( let i = 0; i < app.length; i++ ) { %>
                                    
									<tr>
                                        <td><%= app[i]._id %> </td>
                                        
                                        <% if(app[i].patient.owner.avatar.length < 15 ){ %>
                                            <td><img src="/users/img/<%= app[i].patient.owner.avatar %>" class="rounded-circle m-r-5" alt="" width="28" height="28"> <%= app[i].patient.name %> <%= app[i].patient.lastName %></td>
                                          <% } else{ %>  
                                            <td><img src="<%= app[i].patient.owner.avatar %>" class="rounded-circle m-r-5" alt="" width="28" height="28"> <%= app[i].patient.name %> <%= app[i].patient.lastName %></td>
                                         <% } %>

										
										<td><%= moment(app[i].patient.dateOfBirth).format('L'); %></td>
										<td><%= app[i].patient.cin %></td>
										<td><%= app[i].patient.cnssNumber %></td>
										<td><%= moment(app[i].appointmentDate).format('h:mm a'); %></td>
                                        <td><%= moment(app[i].appointmentDate).format('LL'); %></td>

                                        <% if(app[i].appointmentStatus == "Accepted" ){ %>
                                            <td><span class="custom-badge status-green"><%= app[i].appointmentStatus %></span></td>
                                          <% } else if(app[i].appointmentStatus == "Rejected" ){ %>  
                                            <td><span class="custom-badge status-red"><%= app[i].appointmentStatus %></span></td>
                                            <% } else if(app[i].appointmentStatus == "Waiting" ){ %>  
                                                <td><span class="custom-badge status-grey"><%= app[i].appointmentStatus %></span></td>
                                                <% } else{ %>  
                                                    <td><span class="custom-badge status-blue"><%= app[i].appointmentStatus %></span></td>
                                                 <% } %>

										
										<td class="text-right">
											<div class="dropdown dropdown-action">
												<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
												<div class="dropdown-menu dropdown-menu-right">
													<a class="dropdown-item" href="edit-appointment.html"><i class="fa fa-pencil m-r-5"></i> Edit</a>
													<a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_appointment"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
												</div>
											</div>
										</td>
                                    </tr>
                                    
                                    <% } %>
								</tbody>
							</table>
						</div>
					</div>
                </div>
            </div>
        </div>
    </div>
    <script src="/assets/js/jquery-3.2.1.min.js"></script>
    <script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/jquery.slimscroll.js"></script>
    <script src="/assets/js/app.js"></script>
</body>


